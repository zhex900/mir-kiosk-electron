{
  "name": "kiosk-app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes && rimraf dist && rimraf node_modules",
    "install": "lerna exec yarn install",
    "dev:kiosk": "yarn workspace @kiosk-app/kiosk start",
    "dev:aws-iot-server": "yarn workspace @kiosk-app/aws-iot-server start",
    "dev:win": "pm2 start ./ecosystem.config.js",
    "postinstall": "patch-package",
    "build:kiosk": ""
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "pm2": "^5.1.0"
  }
}
