{
  "name": "pam-kiosk-app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes && rimraf dist && rimraf node_modules",
    "install": "lerna exec yarn install",
    "dev:kiosk": "yarn workspace @pam-kiosk-app/kiosk-app start",
    "dev:aws-iot-server": "yarn workspace @pam-kiosk-app/aws-iot-server start",
    "dev:win": "concurrently \"yarn workspace @pam-kiosk-app/aws-iot-server start\" \"yarn workspace @pam-kiosk-app/kiosk-app start\"",
    "postinstall": "patch-package",
    "build:kiosk": ""
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2",
    "concurrently": "^6.2.0"
  },
  "dependencies": {
    "pm2": "^5.1.0"
  }
}
