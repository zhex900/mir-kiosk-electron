{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
//    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": [
    "app/**/*"
  ],
}
